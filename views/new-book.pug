extends layout

block content

    h1= title

    if(errors)
        h2.errors Ooops!
        ul.errors
            each error in errors
                li
                    =error.message

    form(method='POST' action='/books/new')
        p
            label(for="title") Title:
            if book.title
                input(type="text", name="title" value=book.title id="title")
            else
                input(type="text", name="title" value='' id="title")
        p
            label(for="author") Author:
            if book.author
                input(type="text", name="author" value=book.author id="author")
            else
                input(type="text", name="author" value='' id="author")
        p
            label(for="genre") Genre:
            if book.genre
                input(type="text", name="genre" value=book.genre id="genre")
            else
                input(type="text", name="genre" value='' id="genre")
        p
            label(for="year") Year:
            if book.year
                input(type="text", name="year" value=book.year id="year")
            else
                input(type="text", name="year" value='' id="year")
        p
            input(type="submit" value="Create New Book")
        p
            a.button(href="/books") Cancel